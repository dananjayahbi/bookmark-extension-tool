{
  "manifest_version": 3,
  "name": "Bookmark Desktop",
  "version": "1.0.0",
  "description": "A desktop-like interface for managing browser bookmarks.",
  "permissions": [
    "bookmarks",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  },
  "action": {
    "default_icon": {
      "16": "icon16.svg",
      "48": "icon48.svg",
      "128": "icon128.svg"
    },
    "default_title": "Open Bookmark Desktop"
  }
}